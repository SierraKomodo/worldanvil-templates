{% macro genSkill(id, flag, name, value, dn, statn, stat, penalty = 0) %}{% set eo = "od" %}{% if id is even %}{% set eo = "ev" %}{% endif %}{% if name|last != ":" %}
    {% if id == 'STAT' %}<tr>
        <th class="hdr" title="Group: {{name}}">{{name}}</th><th class="hdr">BASE</th></tr>
    {% else %}
        <tr>
            {% if name == "" %}{% set name = dn %}{% endif %}
            <td class="sklbl {% if penalty < 0 %}penalty{% endif %}" title="Skill: {{name}}{% if penalty < 0 %} - penalty applied{% endif %}">{{name}} ({{statn}})
                {% if flag == "2" %} x2{% endif %}
            </td>
            {% if value == "" %}
                {% if flag == "+" %}
                    {% set base = statn ~ "+2 (" ~ (stat+2) ~ ")" %}
                    {% set roll = "[roll:1d10+" ~ (stat+2) ~ "|" ~ (stat+2) ~ "]" %}
                    <td class="{{eo}} txt c" title="Base: {{base}}">{{roll}}</td>
                {% else %}
                    {% set base = statn ~ " (" ~ stat ~ ")" %}
                    {% set roll = "[roll:1d10+" ~ stat ~ "|-]" %}
                    <td class="{{eo}} txt c basicroll" title="Base: {{base}}">{{roll}}</td>
                {% endif %}
            {% else %}
                {% set base = statn ~ "+" ~ value ~ " (" ~ (stat+value) ~ ")" %}
                {% set roll = "[roll:1d10+" ~ (stat+value) ~ "|" ~ (stat+value) ~ "]" %}
                <td class="{{eo}} txt c" title="Base: {{base}}">{{roll}}</td>
            {% endif %}
        </tr>
    {% endif %}
{% endif %}{% endmacro genSkill %}
